{
	"version": "0.2",
	"language": "en",
	"dictionaries": [
		"en-gb",
		"en-us"
	],
	"files": [
		"**"
	],
	"ignorePaths": [
		"dist"
	],
	"minWordLength": 2,
	"words": [],
	"patterns": [
		{
			"name": "acronyms",
			"pattern": "/[A-Z_]+(?![a-z])/"
		},
		{
			"name": "shorthands",
			"pattern": "/[a-z]{1,3}/"
		}
	],
	"ignoreRegExpList": [
		"acronyms",
		"shorthands",
		"patternConfig"
	]
}